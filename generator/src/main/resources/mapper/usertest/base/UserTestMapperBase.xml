<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.generator.usertest.dao.UserTestDao">

	<select id="get" resultMap="BaseResultMap">
		SELECT 
			<include refid="Base_Column_List"/>
		FROM user_test
		WHERE id = #{id}
	</select>
	
	<select id="list" resultMap="BaseResultMap">
		SELECT 
			<include refid="Base_Column_List"/>
		FROM user_test t
		<where>
			t.valid = 1
			<if test="id != null and id != ''">
				AND t.id = #{id}
			</if>
			<if test="userName != null and userName != ''">
				AND t.user_name LIKE
					concat('%',#{userName},'%')
			</if>
			<if test="age != null and age != ''">
				AND t.age = #{age}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>

	<select id="listPage" resultMap="BaseResultMap" parameterType="Page">
		SELECT
			<include refid="Base_Column_List"/>
		FROM user_test t
		<where>
			t.valid = 1
			<if test="condition != null">
			<if test="condition.id != null and condition.id != ''">
				AND t.id = #{condition.id}
			</if>
			<if test="condition.userName != null and condition.userName != ''">
				AND t.user_name LIKE
					concat('%',#{condition.userName},'%')
			</if>
			<if test="condition.age != null and condition.age != ''">
				AND t.age = #{condition.age}
			</if>
			</if>
		</where>
		<choose>
			<when test="orderBy != null and orderBy != ''">
				ORDER BY ${orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="listAll" resultMap="BaseResultMap">
		SELECT 
			<include refid="Base_Column_List"/>
		FROM user_test t
		<where>
			t.valid = 1
			<if test="id != null and id != ''">
				AND t.id = #{id}
			</if>
			<if test="userName != null and userName != ''">
				AND t.user_name LIKE
					concat('%',#{userName},'%')
			</if>
			<if test="age != null and age != ''">
				AND t.age = #{age}
			</if>
		</where>
	</select>
	
	<insert id="save">
		INSERT INTO user_test(
			id,
			user_name,
			age,
			create_time,
			update_time,
			valid
		) VALUES (
			#{id},
			#{userName},
			#{age},
			#{createTime},
			#{updateTime},
			#{valid}
		)
	</insert>
	
	<update id="update">
		UPDATE user_test SET 	
			<if test="userName != null">
				user_name = #{userName},
			</if>
			<if test="age != null">
				age = #{age},
			</if>
			<if test="createTime != null">
				create_time = #{createTime},
			</if>
			<if test="updateTime != null">
				update_time = #{updateTime},
			</if>
			<if test="valid != null">
				valid = #{valid},
			</if>
		WHERE id = #{id}
	</update>

	<update id="deleteLogic">
		UPDATE user_test SET
		valid = 0
	</update>

	<delete id="delete">
		DELETE FROM user_test
		WHERE id = #{id}
	</delete>

</mapper>